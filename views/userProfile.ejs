<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Page</title>
    <link rel="stylesheet" href="/stylesheets/styleProfile.css">
    <!-- Add the link to the Bootstrap CSS file -->
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,900&display=swap" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css"
        integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <!-- Font Awesome CSS -->
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css'>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>


</head>

<body>
    <!-- navbar start -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="http://localhost:3000/profile"><i class="fa fa-user" aria-hidden="true"></i></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="http://localhost:3000/Article" id="getArticle">Explore <span
                            class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">My Article</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Dropdown
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="#">Action</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">Something else here</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="logout-btn">LogOut</a>
                </li>
            </ul>
            <div class="text-center">
                <a href="http://localhost:3000/createArticle" class="btn btn-outline-danger btn-lg" id="createNewArticle">
                  New Post
                </a>
              </div>
        </div>
    </nav>
    <!-- nav bar end -->
    <div class="student-profile py-4">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mb-2">
                    <div class="card shadow-sm">
                        <div class="card-header bg-transparent text-center">
                            <img src="<%= user.avatar%>" alt="avatar" class="rounded-circle img-fluid"
                                style="height: 200px; width: 250px" />
                            <h3>Welcome <%= user.fristName %>
                                    <%= user.lastName %>
                            </h3>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-center mb-2">
                                <form class="g-3" action="/uploadAvatar" method="post" enctype="multipart/form-data">
                                    <br />
                                    <label for="formFile" class="form-label">Upload Profile picture</label>
                                    <div class="input-group">
                                        <input type="file" name="avatar" class="form-control btn btn-outline-warning"
                                            id="inputGroupFile04" aria-describedby="inputGroupFileAddon04"
                                            aria-label="Upload" />
                                        <input class="btn btn-info" type="submit" value="updateAvatar"
                                            id="inputGroupFileAddon04" />
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="card shadow-sm">
                        <div class="card-header bg-transparent border-0">
                            <h3 class="mb-0"><i class="far fa-clone pr-1"></i>General Information</h3>
                        </div>
                        <div class="card-body pt-0">
                            <table class="table table-bordered">
                                <tr>
                                    <th width="30%">fristName</th>
                                    <td width="2%">:</td>
                                    <td>
                                        <%= user.fristName %>
                                    </td>
                                </tr>
                                <tr>
                                    <th width="30%">UserName</th>
                                    <td width="2%">:</td>
                                    <td>
                                        <%= user.username %>
                                    </td>
                                </tr>
                                <tr>
                                    <th width="30%">Role</th>
                                    <td width="2%">:</td>
                                    <td>
                                        <%= user.roleIn %>
                                    </td>
                                </tr>
                                <tr>
                                    <th width="30%">lastName</th>
                                    <td width="2%">:</td>
                                    <td>
                                        <%= user.lastName %>
                                    </td>
                                </tr>
                                <tr>
                                    <th width="30%">Gender</th>
                                    <td width="2%">:</td>
                                    <td>
                                        <%= user.gender %>
                                    </td>
                                </tr>
                                <tr>
                                    <th width="30%">phoneNumber</th>
                                    <td width="2%">:</td>
                                    <td>
                                        <%= user.phoneNumber %>
                                    </td>
                                </tr>
                            </table>
                            <button class="btn btn-outline-success my-2 my-sm-0" type="submit"
                                id="edit-btn">Edit</button>
                            <button class="btn btn-outline-warning my-2 my-sm-0" type="submit"
                                id="delete-btn">delete</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</body>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
    integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
    crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js"
